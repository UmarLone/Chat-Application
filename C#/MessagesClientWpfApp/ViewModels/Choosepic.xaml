        <Button Width="214"
                Height="62"
                Margin="33,284,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click"
                Content="Choose Image" />
        <Button Width="233"
                Height="64"
                Margin="312,284,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Upload" Click="Button_Click_1" />
        <Image Name="ImagePic"
               Width="354"
               Height="215"
               Margin="117,36,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <TextBox
           Name="txtfilepath" 
           Width="120"
                 Height="23"
                 Margin="471,251,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text="TextBox"
